---
### ALL PAGES ###
layout: null
permalink: /pages.json

### REGULAR PAGES ###
sitemap:
  include: false

meta:
  index: false
---

{% assign pages = site.pages %}
{% assign posts = site.posts %}
{% assign items = pages | concat: posts %}

[
  {% for item in items %}
    {%- if item.layout contains 'post' and item.post.id != null and item.post.id != '' -%}
      {% assign page-type = 'post' %}
    {% else %}
      {% assign page-type = null %}
    {% endif %}

    {%- if item.url contains '/@reference' or item.layout contains 'redirect' or item.search.include == false -%}
      {%- continue -%}
    {%- endif -%}

    {%- if item.url contains '.js' -%}
      {%- continue -%}
    {%- endif -%}

    {
      "url": "{{ site.url }}{{ item.url }}",
      "title": "{{ item.meta.title | uj_liquify }}",
      "desc": "{{ item.meta.description | uj_liquify }}",
      "breadcrumb": "{{ item.meta.breadcrumb | uj_liquify }}",
      "category": "{{ item.search.category | default: item.post.category | uj_liquify }}",
      "type": "{{ page-type | default: item.settings.page-type | uj_liquify }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
